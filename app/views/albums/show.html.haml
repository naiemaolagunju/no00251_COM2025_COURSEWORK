
%p
  %b Artist:
  = @album.artist.name
%p
  %b Name:
  = @album.name
%p
  %b Genre:
  = @album.genre
%p
  %b Notes:
  = @album.notes
%p
  %b Favourite:
  = @album.favourite

%p Songs:
%table
  %tbody
    - @album.songs.each do |song|
      %tr
        %td= song.name
        %td= link_to 'Show', song
        %td= link_to 'Edit', edit_song_path(song)
        %td= link_to 'Delete', song, :method => :delete, :data => { :confirm => 'Are you sure?'}

%p= link_to 'Add Song', new_song_path(album_id: @album)

= link_to 'Edit', edit_album_path(@album)
\|
= link_to 'Back', albums_path
