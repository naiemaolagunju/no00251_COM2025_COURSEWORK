
%p
  %b Name:
  = @artist.name
%p
  %b Image:
  %img{:src => @artist.image}
%p
  %b Notes:
  = @artist.notes
%p
  %b Favourite:
  = @artist.favourite

%p= link_to I18n.t('artist.show.AddAlbum'), new_album_path(artist_id: @artist)

%p Albums:
%table
  %tbody
    - @artist.albums.each do |album|
      %tr{id: "artist_#{@artist.id}"}
        %td= album.name
        %td= link_to I18n.t('artist.show.show'), album
        %td= link_to I18n.t('artist.show.edit'), edit_album_path(album)
        %td= link_to I18n.t('artist.show.destroy'), album, :method => :delete, :data => { :confirm => 'Are you sure?'}, :remote => true

= link_to 'Edit', edit_artist_path(@artist)
\|
= link_to 'Back', artists_path
